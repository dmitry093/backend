{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">
    <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
    <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
    <a type="button"  class="btn btn-primary" href="{{ path('fos_user_profile_edit') }}">
        {{ 'profile.edit'|trans({}, 'FOSUserBundle') }}
    </a>
    <a type="button"  class="btn btn-warning" href="{{ path('fos_user_change_password') }}">
        {{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}
    </a>
</div>
