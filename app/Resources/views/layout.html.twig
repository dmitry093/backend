<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    {% stylesheets '@bootstrap_css' %}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}"/>
    {% endstylesheets %}
    {% javascripts '@jquery' '@bootstrap_js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}


    <style type="text/css">
        body {
            padding-top: 50px;
        }
        .starter-template {
            padding: 40px 15px;
        }
        .form-signin {
            max-width: 400px;
            padding: 15px;
            margin: 0 auto;
        }
    </style>
</head>
<body>
<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            <a class="navbar-brand" href="">{{ 'Backend' }}</a>

        </div>
        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <li class="active"><a href="">Здесь будут ссылки</a></li>
                {% else %}
                    {%  set class = (app.request.attributes.get("_route") == 'fos_user_security_login') ? 'class=active' %}
                    <li {{ class }}><a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a></li>
                    {%  set class = (app.request.attributes.get("_route") == 'fos_user_registration_register') ? 'class=active' %}
                    <li {{ class }}><a href="{{ path('fos_user_registration_register') }}">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a></li>
                {% endif %}
            </ul>
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <p class="navbar-text navbar-right">{{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} </p>
            <ul class="nav navbar-nav navbar-right">
                {%  set class = (app.request.attributes.get("_route") in ['fos_user_profile_show','fos_user_profile_edit', 'fos_user_change_password']) ? ' active' %}
                <li class="dropdown{{ class }}">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <span class="glyphicon glyphicon-user"></span>
                        {{ 'profile.profile'|trans({}, 'FOSUserBundle') }}
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            <a class="navbar-link" href="{{ path('fos_user_profile_show') }}">
                                {{ 'profile.show'|trans({}, 'FOSUserBundle') }}
                            </a>
                        </li>
                        <li>
                            <a class="navbar-link" href="{{ path('fos_user_profile_edit') }}">
                                {{ 'profile.edit'|trans({}, 'FOSUserBundle') }}
                            </a>
                        </li>
                        <li>
                            <a class="navbar-link" href="{{ path('fos_user_security_logout') }}">
                                {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>

            {% endif %}
        </div>
    </div>
</nav>
{% if app.request.hasPreviousSession %}
    {% for type, messages in app.session.flashBag.all %}
        {% for message in messages %}
            <div class="alert alert-{{ type }}">
                {{ message|trans({}, 'FOSUserBundle') }}
            </div>
        {% endfor %}
    {% endfor %}
{% endif %}

<div class="container">
    <div class="starter-template">
        {% block fos_user_content %}
        {% endblock fos_user_content %}
    </div>
</div>
</body>
</html>